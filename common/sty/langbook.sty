%------------------------------------
 \usepackage{ragged2e}                 % recommended by jurabib documentation
 \bibliographystyle{jurabib} 
 \jurabibsetup{
   authorformat={and,year},
   %authorformat={allreversed,and,year},
   %authorformat={smallcaps,allreversed,and,year},
   %authorformat={smallcaps,allreversed,and,indexed},
   titleformat=colonsep,
   %bibformat={tabular,numbered},
   bibformat={numbered,raggedright},
   titleformat={italic,all,colonsep},
   commabeforerest,
   %super,
   }
%--------------------------------------
% page geometry
%--------------------------------------
\geometry{
  xetex,paper=a4paper,centering,twoside,includehead,includefoot,nomarginpar,
  bindingoffset=5mm,
  inner=10mm,outer=10mm,top=10mm,bottom=10mm,           % margins
  headheight=5.2mm,headsep=5mm,footskip=7mm,
  showframe=true,showcrop=true,
  }
