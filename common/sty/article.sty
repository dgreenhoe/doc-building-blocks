\renewcommand{\formboxxyz}[4]{%formula box template
  \mbox{}\newline\indentx
  $\ds{%
  #4%
  }$%
  }%
\renewcommand{\formboxxyzp}[4]{%paragraph formula box template
  #4
  }%

\renewcommand{\formboxxyz}[4]{\mbox{}\newline$\ds\boxed{#4}$}

  %\newtheorem{lemma}[theorem]{Lemma} # do this if want Theorem 1.1, Lemma 1.2
  \newtheorem{theorem}    {Theorem}        [section]
  \newtheorem{lemma}      {Lemma}          [section]
  \newtheorem{proposition}{Proposition}    [section]
  \newtheorem{corollary}  {Corollary}      [section]
%\theoremstyle{definition}
  \newtheorem{definition} {Definition}     [section]
  \newtheorem{example}    {Example}        [section]
  \newtheorem{counterex}  {Counterexample} [section]
  \newtheorem{exercise}   {Exercise}       [section]
  \newtheorem{conclusion} {Conclusion}     [section]
  \newtheorem{conjecture} {Conjecture}     [section]
  \newtheorem{criterion}  {Criterion}      [section]
  \newtheorem{summary}    {Summary}        [section]
  \newtheorem{axiom}      {Axiom}          [section]
%\theoremstyle{remark}
  \newtheorem{remark}     {Remark}         [section]
