%--------------------------------------
% layout parameters
%--------------------------------------
\setlength{\parskip}{1em}
\setlength{\parindent}{0ex}
\setlength{\arrayrulewidth}{1pt}
\renewcommand{\nobreakspace}{ }% kludge fix of problem
%--------------------------------------
% Default font
%--------------------------------------
\setmainfont[
  Extension      = {.otf},
  UprightFont    = {*-regular},
  BoldFont       = {*-bold},
  ItalicFont     = {*-italic},
  BoldItalicFont = {*-bolditalic},
  Ligatures      = {NoCommon},
  ]{texgyreheros}   % sans-serif font
%--------------------------------------
% rule widths
%--------------------------------------
%\renewcommand{\headrulewidth}{0.5pt}
%\renewcommand{\footrulewidth}{0pt}
%--------------------------------------
% Redefine plain style (using fancyhdr package)
%--------------------------------------
\fancypagestyle{plain}{% reference: fancyhdr.pdf version 3.1 pages 7-8
  \fancyhf{}% clear all headers and footers
  \renewcommand{\headrulewidth}{0pt}%  remove head rule
  \renewcommand{\footrulewidth}{0pt}%  remove foot rule
  }
%--------------------------------------
% theorem styles
%--------------------------------------
\theoremstyle{plain}%
  \newtheorem{axiom}      {Axiom}      [chapter]
  \newtheorem{definition} {Definition} [chapter]
  \newtheorem{lemma}      {Lemma}      [chapter]
  \newtheorem{theorem}    {Theorem}    [chapter]
  \newtheorem{corollary}  {Corollary}  [chapter]
  \newtheorem{proposition}{Proposition}[chapter]

\theoremstyle{remark}%
  \newtheorem{conjecture} {Conjecture}     [chapter]
  \newtheorem{example}    {Example}        [chapter]
  \newtheorem{remark}     {Remark}         [chapter]
  \newtheorem{counterex}  {Counterexample} [chapter]
