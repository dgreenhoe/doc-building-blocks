   }
%--------------------------------------
% page geometry
%--------------------------------------
\geometry{
  xetex,paper=a4paper,centering,twoside,includehead,includefoot,nomarginpar,
  bindingoffset=5mm,
  inner=10mm,outer=10mm,top=10mm,bottom=10mm,           % margins
  headheight=5.2mm,headsep=5mm,footskip=7mm,
  showframe=true,showcrop=true,
  }
