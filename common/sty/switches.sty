\newcommand{\dochas}[1]{\setboolean{#1}{true}}
\newcommand{\dochasnot}[1]{\setboolean{#1}{false}}
\newcommand{\ifdochas}[2]{\ifthenelse{\boolean{#1}}{#2}{}}
\newcommand{\ifdocnot}[2]{\ifthenelse{\boolean{#1}}{}{#2}}
\newcommand{\ifdochasnot}[2]{\ifthenelse{\boolean{#1}}{}{#2}}
\newcommand{\ifdochasni}[2]{\ifthenelse{\boolean{#1}}{#2}{not included in this text\index{not included!#1}}}
\newcommand{\ifdochaselse}[3]{\ifthenelse{\boolean{#1}}{#2}{#3}}
\newcommand{\ifDocHasInclude}[1]{\ifdochas{#1}{\include{#1}}}
\newcommand{\ifDocHasCommonInclude}[1]{\ifdochas{#1}{\include{../common/#1}}}
\newcommand{\ifDocHasWaveletsInclude}[1]{\ifdochas{#1}{\include{../common/wavelets/#1}}}
\newcommand{\ifexclude}[2]{\ifthenelse{\boolean{#1}}{}{#2}}
